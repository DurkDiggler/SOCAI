# Server
APP_HOST=0.0.0.0
APP_PORT=8000

# Feature flags
ENABLE_EMAIL=1
ENABLE_AUTOTASK=1

# Email (use maildev for local: SMTP_HOST=maildev, SMTP_PORT=1025)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=alerts@example.com
EMAIL_TO=soc@example.com

# Autotask
AT_BASE_URL=https://webservices11.autotask.net/atservicesrest/v1.0
AT_API_INTEGRATION_CODE=
AT_USERNAME=
AT_SECRET=
AT_ACCOUNT_ID=
AT_QUEUE_ID=
AT_TICKET_PRIORITY=3

# Threat feeds
OTX_API_KEY=
VT_API_KEY=
ABUSEIPDB_API_KEY=

# Scoring
SCORE_HIGH=70
SCORE_MEDIUM=40

# HTTP / Cache
HTTP_TIMEOUT=8.0
IOC_CACHE_TTL=1800

# Webhook auth (either shared secret or HMAC)
WEBHOOK_SHARED_SECRET=
WEBHOOK_HMAC_SECRET=
WEBHOOK_HMAC_HEADER=X-Signature
WEBHOOK_HMAC_PREFIX=sha256=
